                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/topic2_btn"/>
            <Button
                    android:text="Marvel Super Heroes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/topic3_btn"/>
        </LinearLayout>
    </ScrollView>
